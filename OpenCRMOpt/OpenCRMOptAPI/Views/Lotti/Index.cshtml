@model IEnumerable<OpenCRMOptModels.Lotti>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelloNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelloNavigation.Descrizione)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LottoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LottoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LottoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
